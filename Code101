<html>
    <head>
        <script>
                function showDetail() {
    
                    document.getElementById('info').innerHTML = document.forms['myForm'].elements[0].value;
                }
        </script>
    </head>
    <body>
        <form id="myForm">
            <input type="text" name="fname" value="Kanokwatt" onkeyup="showDetail()">
            <input type="submit" value="Send">
        </form>
        <button onclick="showDetail()">Show Detail</button>

        <p id="info"></p>

    </body>
</html>
